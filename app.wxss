/* 全局样式 */
page {
  --primary-color: #07c160;
  --warning-color: #ff976a;
  --error-color: #ee0a24;
  --text-color: #333333;
  --text-color-light: #666666;
  --border-color: #ebedf0;
  --background-color: #f7f8fa;
  
  font-size: 28rpx;
  color: var(--text-color);
  background: var(--background-color);
  box-sizing: border-box;
}

/* 通用样式 */
.container {
  min-height: 100vh;
  padding: 0 32rpx;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.flex {
  display: flex;
  align-items: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

/* 动画 */
@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 按钮样式 */
.btn {
  padding: 8rpx 20rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background: #1890ff;
  color: #fff;
}

.btn-default {
  background: #f5f5f5;
  color: #666;
}

button {
  margin: 10rpx;
}

/* 标题通用样式 */
.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

/* 空状态通用样式 */
.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
} 