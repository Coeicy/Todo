<view class="task-filter">
  <view class="filter-list">
    <view class="filter-item {{current === item.key ? 'active' : ''}}"
          wx:for="{{filters}}"
          wx:key="key"
          bindtap="onFilterChange"
          data-filter="{{item.key}}">
      {{item.text}}
    </view>
  </view>
</view> 