.task-filter {
  width: 100%;
  padding: 20rpx 0;
}

.filter-list {
  display: flex;
  gap: 20rpx;
  overflow-x: auto;
  padding: 0 20rpx;
}

.filter-item {
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  white-space: nowrap;
}

.filter-item.active {
  color: #fff;
  background: #1890ff;
} 