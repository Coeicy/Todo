.task-list {
  width: 100%;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.task-status {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #1890ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.task-status.completed {
  background: #52c41a;
  border-color: #52c41a;
  color: #fff;
}

.task-content {
  flex: 1;
  margin-right: 20rpx;
}

.task-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.task-info {
  font-size: 24rpx;
  color: #999;
  display: flex;
  gap: 16rpx;
}

.task-important {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

.task-important.active {
  color: #faad14;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
} 