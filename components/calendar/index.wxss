.calendar {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  position: relative;
}

/* 日历头部样式 */
.calendar-header {
  margin-bottom: 20rpx;
}

.month-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  margin-bottom: 20rpx;
}

.current-month {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.solar {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.lunar {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.arrow {
  padding: 10rpx 20rpx;
  color: #666;
  font-size: 28rpx;
}

.weekdays {
  display: flex;
  justify-content: space-around;
  padding: 10rpx 0;
  border-bottom: 1px solid #eee;
}

.weekday {
  width: 14.28%;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

/* 日历主体样式 */
.calendar-body {
  padding: 10rpx 0;
}

.days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx;
  position: relative;
  border-radius: 8rpx;
}

.day.other-month {
  opacity: 0.4;
}

.day.selected {
  background: #e6f7ff;
}

.day.today .solar-date {
  color: #1890ff;
  font-weight: 500;
}

.solar-date {
  font-size: 30rpx;
  color: #333;
}

.lunar-date {
  font-size: 20rpx;
  color: #999;
  margin-top: 2rpx;
}

.festival, .term {
  font-size: 20rpx;
  color: #ff4d4f;
  margin-top: 2rpx;
}

.task-dots {
  display: flex;
  gap: 4rpx;
  margin-top: 4rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #1890ff;
}

.dot.completed {
  background: #52c41a;
}

/* 返回今天按钮 */
.today-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.today-btn text {
  font-size: 26rpx;
  color: #1890ff;
} 