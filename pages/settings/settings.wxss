/* 设置组样式 */
.settings-group {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.group-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  padding: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

/* 设置项样式 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item text {
  font-size: 28rpx;
  color: var(--text-color);
}

/* 主题色选择器 */
.color-picker {
  display: flex;
  gap: 16rpx;
}

.color-item {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s;
}

.color-item.active {
  transform: scale(1.2);
}

.check {
  color: #fff;
  font-size: 24rpx;
}

/* 选择器样式 */
.picker-text {
  font-size: 28rpx;
  color: var(--text-color-light);
}

/* 版本号 */
.version {
  font-size: 24rpx;
  color: var(--text-color-light);
}

/* 危险操作 */
.danger {
  color: var(--error-color) !important;
}

/* 关于弹窗 */
.about-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  animation: fadeIn 0.3s;
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  animation: fadeIn 0.3s;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid var(--border-color);
  position: relative;
}

.close-btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  color: var(--text-color-light);
  padding: 0 20rpx;
}

.modal-body {
  padding: 40rpx;
}

/* 应用信息 */
.app-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.app-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 8rpx;
}

.app-version {
  font-size: 24rpx;
  color: var(--text-color-light);
}

.app-desc {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
  text-align: center;
}

/* 动画 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
} 