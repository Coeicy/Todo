.time-unit.minute {
  width: 60rpx;
}

/* 编辑和删除按钮 */
.modal-footer {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}

.edit-btn,
.delete-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: opacity 0.3s;
}

.edit-btn {
  background: var(--primary-color);
  color: #fff;
}

.delete-btn {
  background: var(--error-color);
  color: #fff;
}

.edit-btn:active,
.delete-btn:active {
  opacity: 0.8;
}

/* 错误提示 */
.error-text {
  color: var(--error-color);
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 占位符样式 */
.placeholder {
  color: var(--text-color-light);
}

/* 关闭按钮 */
.close-btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  color: var(--text-color-light);
  padding: 0 20rpx;
} 