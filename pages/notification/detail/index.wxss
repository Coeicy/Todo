.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading,
.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 通用卡片样式 */
.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 12rpx;
  border-left: 4rpx solid #1890ff;
}

/* 基本信息样式 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  font-size: 28rpx;
}

.info-item .label {
  color: #666;
  flex: 0 0 160rpx;
}

.info-item .value {
  color: #333;
  flex: 1;
  text-align: right;
}

.status {
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  font-size: 26rpx;
}

.status.success {
  color: #52c41a;
  background: #f6ffed;
}

.status.failed {
  color: #ff4d4f;
  background: #fff2f0;
}

/* 通知内容样式 */
.content-box {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 16rpx;
}

.content-item {
  display: flex;
  padding: 12rpx 0;
  font-size: 28rpx;
  border-bottom: 1px solid #eee;
}

.content-item:last-child {
  border-bottom: none;
}

.content-item .label {
  color: #666;
  flex: 0 0 140rpx;
}

.content-item .value {
  color: #333;
  flex: 1;
}

/* 关联任务样式 */
.task-info {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
}

.task-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.task-meta {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
}

.task-meta .completed {
  color: #52c41a;
}

/* 错误信息样式 */
.error-box {
  background: #fff2f0;
  border: 1px solid #ffccc7;
  border-radius: 8rpx;
  padding: 16rpx;
  position: relative;
}

.error-text {
  font-size: 26rpx;
  color: #ff4d4f;
  line-height: 1.6;
  word-break: break-all;
}

.copy-hint {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  font-size: 24rpx;
  color: #1890ff;
}

/* 操作按钮样式 */
.actions {
  padding: 30rpx 40rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.actions button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

/* 适配底部按钮 */
.container {
  padding-bottom: 140rpx;
} 