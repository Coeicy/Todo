.container {
  padding: 20rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.form {
  flex: 1;
}

.form-item {
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #e8e8e8;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 160rpx;
  border: 1px solid #e8e8e8;
  border-radius: 6rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.picker, .location-picker {
  height: 80rpx;
  border: 1px solid #e8e8e8;
  border-radius: 6rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.switch-item {
  display: flex;
  align-items: center;
}

.switch-label {
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
}

.footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 0;
}

.footer .btn {
  flex: 1;
} 