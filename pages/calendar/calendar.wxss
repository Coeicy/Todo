.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 日历头部样式 */
.calendar-header {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.month-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  margin-bottom: 20rpx;
}

.current-month {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.solar {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.lunar {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.arrow {
  padding: 10rpx 20rpx;
  color: #666;
  font-size: 28rpx;
}

.weekdays {
  display: flex;
  justify-content: space-around;
  padding: 10rpx 0;
  border-bottom: 1px solid #eee;
}

.weekday {
  width: 14.28%;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

/* 日历主体样式 */
.calendar-body {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx;
  position: relative;
  border-radius: 8rpx;
}

.day.other-month {
  opacity: 0.4;
}

.day.selected {
  background: #e6f7ff;
}

.day.today .solar-date {
  color: #1890ff;
  font-weight: 500;
}

.solar-date {
  font-size: 30rpx;
  color: #333;
}

.lunar-date {
  font-size: 20rpx;
  color: #999;
  margin-top: 2rpx;
}

.festival, .term {
  font-size: 20rpx;
  color: #ff4d4f;
  margin-top: 2rpx;
}

.task-dots {
  display: flex;
  gap: 4rpx;
  margin-top: 4rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #1890ff;
}

.dot.completed {
  background: #52c41a;
}

/* 日期详情样式 */
.date-detail {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.detail-header {
  padding-bottom: 16rpx;
  border-bottom: 1px solid #eee;
  margin-bottom: 20rpx;
}

.date-info {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.date-info .solar-date {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.date-info .lunar-date {
  font-size: 26rpx;
  color: #666;
}

.festival-info {
  margin-top: 8rpx;
}

.festival-info .festival,
.festival-info .term {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #fff2f0;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #ff4d4f;
  margin-right: 8rpx;
}

/* 运势部分样式 */
.fortune-section {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.fortune-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.suitable, .unsuitable {
  display: flex;
  align-items: center;
}

.label {
  font-size: 26rpx;
  color: #666;
  width: 60rpx;
}

.value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

/* 任务列表样式 */
.tasks-section {
  margin-top: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.add-btn {
  padding: 8rpx 20rpx;
  background: #1890ff;
  color: #fff;
  font-size: 26rpx;
  border-radius: 6rpx;
}

.task-list {
  min-height: 200rpx;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.task-status {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #1890ff;
  border-radius: 50%;
  margin-right: 16rpx;
}

.task-status.completed {
  background: #52c41a;
  border-color: #52c41a;
}

.task-content {
  flex: 1;
}

.task-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.task-time {
  font-size: 24rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

/* 返回今天按钮 */
.today-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.today-btn text {
  font-size: 26rpx;
  color: #1890ff;
} 