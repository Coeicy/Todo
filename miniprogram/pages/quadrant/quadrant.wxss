.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20px;
}

.quadrants {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
  flex: 1;
}

.quadrant {
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 15px;
  background-color: #f9f9f9;
}

.quadrant-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.quadrant-title {
  font-size: 16px;
  font-weight: bold;
}

.add-btn {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background-color: #07c160;
  color: white;
  border: none;
  font-size: 20px;
  line-height: 30px;
}

.task-list {
  min-height: 100px;
}

.task-item {
  display: flex;
  align-items: center;
  margin: 8px 0;
  padding: 8px;
  background-color: white;
  border-radius: 4px;
}

.task-content {
  flex: 1;
  margin: 0 10px;
  font-size: 14px;
}

.task-content.completed {
  text-decoration: line-through;
  color: #999;
}

.delete-btn {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background-color: #ff4d4f;
  color: white;
  border: none;
  font-size: 16px;
  line-height: 24px;
  padding: 0;
}

.tabbar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  background-color: #fff;
  border-top: 1px solid #ccc;
}

.tabbar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tabbar-icon {
  font-size: 20px;
  margin-bottom: 5px;
}

.tabbar-text {
  font-size: 12px;
}
